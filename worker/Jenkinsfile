pipeline {
    agent any
    tools {
		maven 'maven 3.9.9'
	}
    stages{
        stage('build_result'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'install result app'
                dir('result'){
                    sh 'mvn install'
                }
            }
        }
        stage('test_result'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Running unit tests on result app'
                dir('result'){
                    sh 'mvn install test'
                }
            }
        }
        stage('build_worker'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo 'building worker app'
                dir('worker'){
                  sh 'mvn compile'
                }
            }
        }
        stage('test_worker'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo 'Running unit tests on worker app'
                dir('worker'){
                  sh 'mvn clean test'
                }
            }
        }
        stage('package_worker'){
            when{
                branch 'master'
                changeset "**/worker/**"
            }
            steps{
                echo 'packaging worker app into a jarfile'
                dir('worker'){
                  sh 'mvn package -DskipTests'
                  archiveArtifacts artifacts: '**/target/*.jar', fingerprint:  true
                }
            }
        }
    }
    post{
        always{
            echo 'Building multibranch pipeline is completed.'
    }
  }
}

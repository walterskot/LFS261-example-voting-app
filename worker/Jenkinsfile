pipeline {
    agent any
    tools {
		maven 'maven 3.9.9'
		nodejs 'NodeJS 22.4.0'
	}
    stages{
        stage('build_result'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'install result app'
                dir('worker'){
                    sh 'npm install'
                }
            }
        }
        stage('test_result'){
            when{
                changeset "**/result/**"
            }
            steps{
                echo 'Running unit tests on result app'
                dir('worker'){
                    sh 'npm install test'
                }
            }
        }
        stage('build_worker'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo 'building worker app'
                dir('worker'){
                  sh 'mvn compile'
                }
            }
        }
        stage('test_worker'){
            when{
                changeset "**/worker/**"
            }
            steps{
                echo 'Running unit tests on worker app'
                dir('worker'){
                  sh 'mvn clean test'
                }
            }
        }
        stage('package_worker'){
            when{
                branch 'master'
                changeset "**/worker/**"
            }
            steps{
                echo 'packaging worker app into a jarfile'
                dir('worker'){
                  sh 'mvn package -DskipTests'
                  archiveArtifacts artifacts: '**/target/*.jar', fingerprint:  true
                }
            }
        }
    }
    post {
        success {
            slackSend (
                channel: '#testing',
                color: 'good',
                message: "✅ Build SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
            )
        }
        failure {
            slackSend (
                channel: '#testing',
                color: 'danger',
                message: "❌ Build FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)"
            )
        }
    }
}
